---
import Layout from '../layouts/Layout.astro';
import LandingHeader from '../components/Header/LandingHeader.astro';
import HeroSection from '../components/Home/HeroSection.astro';
import Model3 from '../components/Home/Model3.astro';
import ModelY from '../components/Home/ModelY.astro';
import ModelS from '../components/Home/ModelS.astro';
import ModelX from '../components/Home/ModelX.astro';
import SolarPanels from '../components/Home/SolarPanels.astro';
import SolarRoof from '../components/Home/SolarRoof.astro';
import Powewall from '../components/Home/Powewall.astro';
---

<Layout title="Electric Cars, Solar & Clean Energy | Tesla">
	<LandingHeader/>
	<main
	  class="snap-y snap-mandatory relative w-full h-screen overflow-y-auto overflow-x-hidden scroll-smooth"
	>
		<div class="snap-center">
			<HeroSection />
		</div>

		<div class="snap-center">
			<Model3 />
		</div>

		<div class="snap-center">
			<ModelY/>
		</div>

		<div class="snap-center">
			<ModelS />
		</div>

		<div class="snap-center">
			<ModelX />
		</div>

		<div class="snap-center">
			<SolarPanels />
		</div>

		<div class="snap-center">
			<SolarRoof />
		</div>

		<div class="snap-center">
			<Powewall />
		</div>
	</main>
</Layout>

